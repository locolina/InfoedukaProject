@model IEnumerable<InfoedukaMVC.Models.Comment>

@{
    ViewData["Title"] = "Index";
}


@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
            @Html.DisplayFor(modelItem => item.Class.ClassName)
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@Html.DisplayFor(modelItem => item.Content)</p>
                <footer class="blockquote-footer">On @Html.DisplayFor(modelItem => item.DatePosted) by <cite title="Source Title">@Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)</cite></footer>
            </blockquote>
        </div>
    </div>
}
